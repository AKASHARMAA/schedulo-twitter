<h1 style="text-align: center; margin-bottom: 30px;"><b class="w3-text-pink">Password Reset</b></h1>


<%= form_with url: password_reset_post_path, data: {turbo: false} do |form| %>
    <div class="w3-container ">
        <div style="margin-top: 10px; text-align: center;">
            <h3 style="text-align: center; font-family: 'Courier New', Courier, monospace;"><b>Email :</b></h3>
            <div class="align-center">
                <%= form.text_field :email , class: "w3-input w3-pale-red input-class w3-center w3-round" ,
                    placeholder: "Enter your email..." %>
            </div>
            <% if @user %>
                <% @user.errors.messages[:email].each do |errorMessage| %>
                <div class="align-center w3-text-red">
                    <b><%= errorMessage %></b>
                </div>
                <% end %>
            <% end %>
        </div>
        <br>
        <div class="align-center">
            <input type="submit" form.submit class="w3-teal w3-round w3-center w3-border-black w3-padding-16" value="RESET" >
        </div>
    </div>
    <% end %>