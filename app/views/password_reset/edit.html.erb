<h1 style="text-align: center; margin-bottom: 30px;"><b class="w3-text-pink">Reset Password</b></h1>


<%= form_with url: password_reset_patch_path(token: @token), data: {turbo: false}, method: "patch" do |form| %>
    <div class="w3-container ">
        <div style="margin-top: 10px;">
            <h3 style="text-align: center; font-family: 'Courier New', Courier, monospace;"><b>Password :</b></h3>
            <div class="align-center">
                <%= form.password_field :password, class: "w3-input w3-pale-red input-class w3-center w3-round" ,
                    placeholder: "Enter Your Password..." %>
                    <br>
            </div>
            <% if @user %>
            <% @user.errors.messages[:password].each do |errorMessage| %>
                <div class="align-center w3-text-red">
                    <b><%= errorMessage %></b>
                </div>
                <% end %>
            <% end %>
        </div>
        <br>
        <div style="margin-top: 10px;">
            <h3 style="text-align: center; font-family: 'Courier New', Courier, monospace;"><b>Confirm Password :</b>
            </h3>
            <div class="align-center">
                <%= form.password_field :password_confirmation,
                    class: "w3-input w3-pale-red input-class w3-center w3-round" ,
                    placeholder: "Confirm Your Password..." %>
            </div>
            <% if @user %>
            <% @user.errors.messages[:password_confirmation].each do |errorMessage| %>
                <div class="align-center w3-text-red">
                    <b><%= errorMessage %></b>
                </div>
                <% end %>
            <% end %>


        </div>
        <br>
        <div class="align-center">
            <input type="submit" form.submit class="w3-teal w3-round w3-center w3-border-black w3-padding-16" value="RESET" >
        </div>
    </div>
    <% end %>