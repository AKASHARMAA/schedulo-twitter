<%= form_with url: "/tweet/post-tweet/#{@twitter_account_id}", method: :post, data: {turbo: false} do |form| %>
    <div class="w3-container ">
        <div style="margin-top: 10px; text-align: center;">
            <h3 style="text-align: center; font-family: 'Courier New', Courier, monospace;"><b>Post Body :</b></h3>
            <div class="align-center">
                <%= form.text_area :body, class: "w3-input w3-pale-red input-class w3-center w3-round" ,
                    placeholder: "Enter Your Post..." %>
            </div>
        <br>
        <div class="align-center">
            <input type="submit" form.submit class="w3-teal w3-round w3-center w3-border-black w3-padding-16" value="POST" >
        </div>
    </div>
    <% end %>