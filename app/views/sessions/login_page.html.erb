<h1 style="text-align: center; margin-bottom: 30px;"><b class="w3-text-pink">Login Here</b></h1>


<%= form_with url: login_post_path, data: {turbo: false}, method: "post" do |form| %>
    <div class="w3-container ">
        <div style="margin-top: 10px; text-align: center;">
            <h3 style="text-align: center; font-family: 'Courier New', Courier, monospace;"><b>Email :</b></h3>
            <div class="align-center">
                <%= form.text_field :email , class: "w3-input w3-pale-red input-class w3-center w3-round",
                    placeholder: "Enter your email..." %>
            </div>
        </div>
        <br>
        <div style="margin-top: 10px;">
            <h3 style="text-align: center; font-family: 'Courier New', Courier, monospace;"><b>Password :</b></h3>
            <div class="align-center">
                <%= form.password_field :password, class: "w3-input w3-pale-red input-class w3-center w3-round",
                    placeholder: "Enter Your Password..." %>
                <br>
            </div>
            
            
        </div>
        <br>
        <div class="align-center" >
            <%= link_to "Forgot Password", password_reset_get_path, class: " w3-text-blue w3-round" %>
        </div>
        <br>
        <div class="align-center">
            <input type="submit" class="w3-teal w3-round w3-center w3-border-black w3-padding-16" value="LOGIN" />
        </div>
        
    </div>
    <% end %>